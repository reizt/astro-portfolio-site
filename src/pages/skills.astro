---
import Layout from 'src/layouts/Layout.astro';
import LangCard from '../components/LangCard.astro';
type Language = {
  name: string;
  iconUrl: string;
  scale: number;
  primary: boolean;
};
const languages: Language[] = [
  { name: 'TypeScript', iconUrl: '/languages/typescript.svg', scale: 0.6, primary: true },
  { name: 'Node.js', iconUrl: '/languages/nodejs.svg', scale: 1, primary: true },
  { name: 'React', iconUrl: '/languages/react.svg', scale: 0.6, primary: true },
  { name: 'Next.js', iconUrl: '/languages/nextjs.svg', scale: 0.8, primary: true },
  { name: 'Tailwind CSS', iconUrl: '/languages/tailwindcss.svg', scale: 0.6, primary: true },
  { name: 'Docker', iconUrl: '/languages/docker.svg', scale: 0.8, primary: true },
  { name: 'Terraform', iconUrl: '/languages/terraform.svg', scale: 0.7, primary: true },
  { name: 'AWS', iconUrl: '/languages/aws.svg', scale: 0.7, primary: true },
  { name: 'Go', iconUrl: '/languages/go.svg', scale: 1, primary: true },
  { name: 'Sass', iconUrl: '/languages/sass.svg', scale: 0.6, primary: false },
  { name: 'Vue.js', iconUrl: '/languages/vuejs.svg', scale: 0.6, primary: false },
  { name: 'Ruby on Rails', iconUrl: '/languages/rails.svg', scale: 0.8, primary: false },
  { name: 'WordPress', iconUrl: '/languages/wordpress.svg', scale: 0.6, primary: false },
];
const primaryLanguages = languages.filter((language) => language.primary);
const subLanguages = languages.filter((language) => !language.primary);
---

<Layout title="Skills" currentPath="/skills/">
  <div class="px-16 xl:px-60">
    <section id="skills" class="mx-auto flex min-h-full-screen-y w-full max-w-1000 flex-col-reverse justify-between pb-60 xl:flex-row xl:pt-100">
      <div class="shrink-0 xl:pr-24">
        <div class="mb-12 grid h-max grid-cols-2 gap-12 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-3">
          {primaryLanguages.map((lang) => <LangCard lang={lang} />)}
        </div>
        <div class="grid h-max grid-cols-2 gap-12 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 xl:grid-cols-4">
          {subLanguages.map((lang) => <LangCard lang={lang} />)}
        </div>
      </div>
      <div class="mb-32 grow pt-60 xl:mb-0 xl:pt-100 xl:pl-60">
        <h2 class="mb-12 text-32 font-bold leading-tight tracking-widest xl:text-48">Skills</h2>
        <p class="text-16 font-light leading-snug tracking-widest text-white-500">
          I'm mainly using <span class="text-primary">TypeScript</span> both in backend and frontend.<br />I love its convenient typing system.<br />
          <br />
          <span class="text-primary">AWS</span>
          is often used for the infrastructure environment, and in that case,<!-- -->
          <span class="text-primary">terraform</span> and <span class="text-primary">docker</span> are used together.<br />
          <br />The CSS framework I love best is <span class="text-primary">Tailwind CSS</span>.
        </p>
      </div>
    </section>
  </div>
</Layout>
